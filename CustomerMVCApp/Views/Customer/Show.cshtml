@model System.Data.DataTable
@using System.Data
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
</head>
<body>
<div>
    @if (Model != null)
    {
        <table border ="1">
            <thead>
            <tr>
                @foreach (System.Data.DataColumn col in Model.Columns)
                {
                    <th>@col.Caption</th>
                }
            </tr>
              
            </thead>
           
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (var cell in row.ItemArray)
                        {
                            if(cell != null)
                             {
                                 <td>@cell.ToString()</td>
                             }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>
                }
            
            </tbody>

        </table>
    }
</div>
</body>
</html>
